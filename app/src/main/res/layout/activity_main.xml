<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <TextView
            android:id="@+id/tv_Show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="10sp"

            android:text="" />

        <TextView
            android:id="@+id/tv_userInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAlignment="textEnd"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/tv_userResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="90sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            app:columnCount="5"
            app:rowCount="5">

            <Button
                android:id="@+id/btn_7"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="7"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/btn_4"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="4"
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/btn_1"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="1"
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/btn_0"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="0"
                app:layout_column="0"
                app:layout_row="3" />

            <Button
                android:id="@+id/btn_8"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="8"
                app:layout_column="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/btn_5"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="5"
                app:layout_column="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="2"
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="."
                app:layout_column="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/btn_9"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="9"
                app:layout_column="2"
                app:layout_row="0" />

            <Button
                android:id="@+id/btn_6"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="6"
                app:layout_column="2"
                app:layout_row="1" />

            <Button
                android:id="@+id/btn_3"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="3"
                app:layout_column="2"
                app:layout_row="2" />

            <Button
                android:id="@+id/btn_equals"
                style="@style/NumerosBotones"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="="
                app:layout_column="2"
                app:layout_row="3" />

            <Button
                android:id="@+id/btn_entre"
                style="@style/FuncionBotones"
                android:layout_width="78dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="รท"
                app:layout_column="3"
                app:layout_row="0" />

            <Button
                android:id="@+id/btn_por"
                style="@style/FuncionBotones"
                android:layout_width="78dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="x"
                app:layout_column="3"
                app:layout_row="1" />

            <Button
                android:id="@+id/btn_menos"
                style="@style/FuncionBotones"
                android:layout_width="78dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="-"
                app:layout_column="3"
                app:layout_row="2" />

            <Button
                android:id="@+id/btn_mas"
                style="@style/FuncionBotones"
                android:layout_width="78dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="+"
                app:layout_column="3"
                app:layout_row="3" />

            <Button
                android:id="@+id/btn_C"
                style="@style/FuncionBotones"
                android:layout_width="78dp"
                android:layout_height="317dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:onClick="onClick"
                android:text="C"
                app:layout_column="4"
                app:layout_row="0"
                app:layout_rowSpan="4" />

        </android.support.v7.widget.GridLayout>/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>